
<h1>Listing Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Excerpt</th>
      <th>Published at</th>
      <th>Replies</th>
      <th>location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.excerpt %></td>
        <td><%= article.published_at %></td>
        <td><%= article.replies.count %></td>
        <td><%= article.location %></td>
        <td><%= link_to 'View', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Remove', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</br>

<%= link_to 'Contribute Article', new_article_path %>
