<!DOCTYPE html>
<html>
<head>
  <title>Blog2</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<div id ="header">
		<h1><%= link_to "Home", root_path  %></h1>
		<div id="user_bar">
			<% if logged_in? %>
				<%= link_to "Contribute", new_article_path %> | 
				<%= link_to "User Details", edit_user_path(current_user) %> |
				<%= link_to "Profile", edit_user_profile_path(current_user, current_user.profile) %> |
				<%= link_to "Logout", logout_path %>
			<% else %>
				<%= link_to "Login", login_path %>
				<%= link_to "Sign up", new_user_path %>
			<% end %>
		</div>
	</div>

	<div id="main">
		<%= content_tag :p, notice, :class => 'notice' if notice.present? %>
		<%= content_tag :p, notice, :class => 'alert' if alert.present? %>
		<%= yield %>
	</div>

</div id="footer">
</div>

</body>
</html>
